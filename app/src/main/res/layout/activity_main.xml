<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Дисплей калькулятора -->
    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:gravity="end"
        android:text="0"
        android:background="@color/screenbackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Рядок з кнопками "AC", "+/-", "%", "/" -->
    <Button
        android:id="@+id/button_ac"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="AC"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_plus_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+/-"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toEndOf="@id/button_ac"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toEndOf="@id/button_plus_minus"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toEndOf="@id/button_percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Рядок з кнопками "7", "8", "9", "x" -->
    <Button
        android:id="@+id/button_7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_ac"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toEndOf="@id/button_7"
        app:layout_constraintTop_toBottomOf="@id/button_plus_minus"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toEndOf="@id/button_8"
        app:layout_constraintTop_toBottomOf="@id/button_percent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toEndOf="@id/button_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_divide"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Рядок з кнопками "4", "5", "6", "-" -->
    <Button
        android:id="@+id/button_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_7"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toEndOf="@id/button_4"
        app:layout_constraintTop_toBottomOf="@id/button_8"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toEndOf="@id/button_5"
        app:layout_constraintTop_toBottomOf="@id/button_9"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toEndOf="@id/button_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_multiply"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Рядок з кнопками "1", "2", "3", "+" -->
    <Button
        android:id="@+id/button_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_4"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toEndOf="@id/button_1"
        app:layout_constraintTop_toBottomOf="@id/button_5"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toEndOf="@id/button_2"
        app:layout_constraintTop_toBottomOf="@id/button_6"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toEndOf="@id/button_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_minus"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Рядок з кнопками "0" і "=" -->
    <Button
        android:id="@+id/button_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/button_equals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="24sp"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toEndOf="@id/button_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_2"
        app:layout_constraintWidth_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>
